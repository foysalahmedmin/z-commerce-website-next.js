{
  "root": true,
  "env": {
    "node": true,
    "browser": true,
    "commonjs": true
  },
  "extends": ["next/core-web-vitals", "eslint:recommended", "prettier"],
  "ignorePatterns": ["dist", ".eslintrc.cjs"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": ["prettier"],
  "rules": {
    "no-undef": "warn",
    "no-unused-vars": "warn",
    "no-console": "warn"
  }
}
